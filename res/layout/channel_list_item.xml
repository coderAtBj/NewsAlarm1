<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#ffffff"
    >
    
    <ImageView 
        android:id="@+id/imv_channel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_channel_0"
        android:contentDescription="@string/default_desc"
        />
    
    <ImageView 
        android:id="@+id/imv_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_choose"
        android:contentDescription="@string/default_desc"
        android:visibility="gone"
        />
    
    <TextView 
        android:id="@+id/tv_name"
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_below="@id/imv_channel"
        android:textColor="#000002"
        android:textSize="18sp"
        android:layout_marginTop="7dp"
        />
</RelativeLayout>